<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
	  <Version>2.0.0</Version>
	  <Title>Routya.Events</Title>
	  <Authors>Henry Bartosch</Authors>
	  <Copyright>Copyright (c) Henry Bartosch</Copyright>
	  <PackageId>Routya.Events</PackageId>
	  <RepositoryUrl>https://github.com/HBartosch/Routya</RepositoryUrl>
	  <RepositoryType>git</RepositoryType>
	  <PackageProjectUrl>https://routya.github.io/</PackageProjectUrl>
	  <PackageTags>dispatcher, request, response, notification</PackageTags>
	  <Description>request and notification dispatcher</Description>
	  <PackageReleaseNotes>Registry-based optimization with smart fallback and auto-caching. Supports .NET 8, 9, and 10.</PackageReleaseNotes>
	  <PackageIcon>PackageIconResized.png</PackageIcon>
	  <PackageLicenseFile>LICENSE</PackageLicenseFile>
	  <PackageReadmeFile>README.md</PackageReadmeFile>
	  <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	  <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)' != 'netstandard2.0'">
  	<Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
  	<None Include="LICENSE" Pack="true" PackagePath="" />
  	<None Include="README.md" Pack="true" PackagePath="" />
  	<None Include="PackageIconResized.png" Pack="true" PackagePath="" />
  </ItemGroup>
	
</Project>
